/**
 * Clears frontend cache (nginx).
 */
function clear_next_nginx_cache($path = '') {
  $front_end_url = Settings::get('BASE_FRONTEND_URL');

  if (!isset($front_end_url) || $front_end_url == '') {
    \Drupal::logger('clear_next_nginx_cache')
      ->warning('BASE_FRONTEND_URL env variable is undefined');
    return FALSE;
  }

  $client = \Drupal::httpClient();

  try {
    $request = $client->requestAsync('PURGE', $front_end_url . '/' . $path);
    \Drupal::logger('clear_next_nginx_cache')->info('Next nginx cache cleared for ' . $path);
  }
  catch (ServerException $e) {
    \Drupal::logger('clear_next_nginx_cache')
      ->warning("Next nginx cache cleared for {$path} (no cache found)");
  }
  catch (RequestException $e) {
    \Drupal::logger('clear_next_nginx_cache')
      ->warning("Next nginx cache cleared for {$path} (no cache found)");
  }
}
