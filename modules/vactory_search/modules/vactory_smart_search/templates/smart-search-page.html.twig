{#
/**
 * @file
 * Template for the main page.
 */
#}

<noscript>
  <div class="alert alert-warning text-center" role="alert">{{ 'Your browser does not support JavaScript!' | t }}</div>
</noscript>
{% if page.header %}
  {{ page.header }}
{% endif %}

<main role="main">
  {% if page.bridge %}
    {{ page.bridge }}
  {% endif %}
  {% block v_page_content %}
    <div class="container page-content">
      <div class="row">
        <div class="col-md-3">
          {% if page.sidebar %}
            {{ page.sidebar }}
          {% endif %}
        </div>
        <div class="col-md-9">
          {% if page.content %}
            {{ page.content }}
          {% endif %}
        </div>
      </div>
    </div>
  {% endblock %}
</main>

{% if page.footer %}
  {{ page.footer }}
{% endif %}

{% if page.bottom %}
  {{ page.bottom }}
{% endif %}

<div class="vf-go-back-top"><a href="#" class="go-top">{{ 'Top'|t }}</a></div>

<div class="bg-turn">
  <span class="close-interstitiel icon-close-circle"
        id="interstitiel-button--close"></span>
</div>
